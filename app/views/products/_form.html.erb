<%= form_with model: @product do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br><br>

  <%= f.label :product_code %>
  <%= f.text_field :product_code, required: true %><br><br>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, step: 0.01 %><br><br>

  <%= f.label :tax_percentage %>
  <%= f.number_field :tax_percentage %><br><br>

  <%= f.label :stock_quantity %>
  <%= f.number_field :stock_quantity %><br><br>

  <%= f.submit %>

<% end %>
